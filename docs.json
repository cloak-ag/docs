{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Cloak SDK Documentation",
  "colors": {
    "primary": "#6366F1",
    "light": "#818CF8",
    "dark": "#4F46E5"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Getting Started",
            "pages": [
              "sdk/introduction",
              "sdk/quickstart"
            ]
          },
          {
            "group": "Guides",
            "pages": [
              "sdk/core-concepts",
              "sdk/wallet-integration",
              "sdk/error-handling"
            ]
          },
          {
            "group": "Reference",
            "pages": [
              "sdk/api-reference"
            ]
          }
        ]
      },
      {
        "tab": "AI Tools",
        "groups": [
          {
            "group": "IDE Setup",
            "pages": [
              "ai-tools/cursor",
              "ai-tools/claude-code",
              "ai-tools/windsurf"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "GitHub",
          "href": "https://github.com/cloak-ag/sdk",
          "icon": "github"
        },
        {
          "anchor": "NPM",
          "href": "https://www.npmjs.com/package/@cloak.ag/sdk",
          "icon": "npm"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:support@cloak.ag"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Get Started",
      "href": "/sdk/quickstart"
    }
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "perplexity",
      "mcp",
      "cursor",
      "vscode"
    ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/cloakdotag",
      "github": "https://github.com/cloak-ag",
      "discord": "https://discord.gg/cloak"
    }
  },
  "redirects": [
    {
      "source": "/",
      "destination": "/sdk/introduction"
    },
    {
      "source": "/quickstart",
      "destination": "/sdk/quickstart"
    }
  ]
}
