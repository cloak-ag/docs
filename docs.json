{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Cloak Documentation",
  "colors": {
    "primary": "#6366F1",
    "light": "#818CF8",
    "dark": "#4F46E5"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Getting Started",
            "pages": [
              "sdk/introduction",
              "sdk/quickstart",
              "sdk/migration-v1-v2"
            ]
          },
          {
            "group": "Core Concepts",
            "pages": [
              "sdk/core-concepts",
              "sdk/utxo-transactions"
            ]
          },
          {
            "group": "Integration",
            "pages": [
              "sdk/wallet-integration",
              "sdk/error-handling"
            ]
          },
          {
            "group": "Protocol",
            "pages": [
              "protocol/architecture",
              "protocol/shield-pool"
            ]
          },
          {
            "group": "Relay Service",
            "pages": [
              "services/relay-api"
            ]
          },
          {
            "group": "API Reference",
            "pages": [
              "sdk/api-reference"
            ]
          }
        ]
      },
      {
        "tab": "AI Tools",
        "groups": [
          {
            "group": "IDE Setup",
            "pages": [
              "ai-tools/cursor",
              "ai-tools/claude-code",
              "ai-tools/windsurf"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "GitHub",
          "href": "https://github.com/cloak-ag/sdk",
          "icon": "github"
        },
        {
          "anchor": "NPM",
          "href": "https://www.npmjs.com/package/@cloak.ag/sdk",
          "icon": "npm"
        },
        {
          "anchor": "Discord",
          "href": "https://discord.com/invite/HDt3Nb6adt",
          "icon": "discord"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "App",
        "href": "https://cloak.ag"
      }
    ]
  },
  "topbar": {
    "style": "gradient"
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "perplexity",
      "mcp",
      "cursor",
      "vscode"
    ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/cloakdotag",
      "github": "https://github.com/cloak-ag",
      "discord": "https://discord.com/invite/HDt3Nb6adt"
    }
  },
  "redirects": [
    {
      "source": "/",
      "destination": "/sdk/introduction"
    },
    {
      "source": "/quickstart",
      "destination": "/sdk/quickstart"
    }
  ],
  "feedback": {
    "thumbsRating": true,
    "suggestEdit": true
  },
  "search": {
    "prompt": "Search Cloak docs..."
  }
}
